{
	"$schema": "https://biomejs.dev/schemas/1.8.3/schema.json",
	"organizeImports": {
		"enabled": true
	},
	"files": {
		"ignore": ["node_modules", ".next", ".firebase", "out", "public"]
	},

	"linter": {
		"enabled": true,

		"rules": {
			"style": {
				"noUnusedTemplateLiteral": "off"
			},
			"suspicious": {
				"noExplicitAny": "info",
				"noArrayIndexKey": "warn"
			},
			"a11y": {
				"useMediaCaption": "off"
			},
			"recommended": true
		}
	}
}
